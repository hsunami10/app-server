    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.7",
    "@types/pg": "^8.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-autofix": "^1.0.5",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-lodash": "^7.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.1.2",
    "apollo-server-express": "^3.1.2",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "graphql": "^15.5.1",
    "graphql-tools": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.10",
    "lodash": "^4.17.21",
    "logger": "^0.0.1",
    "objection": "^3.0.0-alpha.4",
    "path": "^0.12.7",
    "pg": "^8.7.1"
  },
  "scripts": {
    "babel-node": "BABEL_ENV=node babel-node",
    "build": "yarn clean && yarn babel src/ --extensions '.js','.jsx','.ts','.tsx' --out-dir=lib/",
    "clean": "rm -rf lib/",
    "dev": "tsc && yarn build && nodemon lib/app.js",
    "db:name": "echo $(grep POSTGRES_DATABASE_NAME .env.development.local | cut -d '=' -f2)",
    "db:clean": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:rollback --all",
    "db:console": "psql -U postgres -d $(yarn -s db:name)",
    "db:create": "psql -U postgres -c \"CREATE DATABASE $(yarn -s db:name)\"",
    "db:drop": "psql -U postgres -c \"DROP DATABASE $(yarn -s db:name)\"",
    "db:install": "POSTGRES_DATABASE_NAME=$(yarn -s db:name) ./scripts/psql/install.sh",
    "db:gen-migration": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:make",
    "db:gen-seed": "env-cmd knex --knexfile=src/config/knexfile.ts seed:make",
    "db:migrate": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:latest",
    "db:migrate-down": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:down",
    "db:migrate-list": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:list",
    "db:migrate-up": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:up",
    "db:rollback": "env-cmd knex --knexfile=src/config/knexfile.ts migrate:rollback",
    "db:seed": "yarn db:clean && yarn db:migrate && env-cmd knex --knexfile=src/config/knexfile.ts seed:run",
    "db:start-server": "pg_ctl -D /usr/local/var/postgres start",
    "db:stop-server": "pg_ctl -D /usr/local/var/postgres stop",
    "eslint": "eslint --ext .ts,.tsx",
    "prettier": "prettier",
    "tsc": "tsc",
    "tsc-watch": "tsc --watch",
    "watchman": "scripts/watchman/setup.sh",
    "watchman-stop": "watchman watch-del-all"
  }
}
